# MedAI Copilot Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false
API_VERSION=v1

# External API Keys
GROQ_API_KEY=your_groq_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
KEYWORD_AI_KEY=your_keyword_ai_key_here

# AI Model Configuration
SKIN_MODEL_PATH=models/isic_resnet50.h5
RADIOLOGY_MODEL_PATH=models/chexnet_densenet121.pth
SKIN_MODEL_THRESHOLD=0.5
RADIOLOGY_MODEL_THRESHOLD=0.5
ENABLE_GPU=true
MODEL_CACHE_DIR=models/cache

# Database Configuration (Optional - for storing analysis results)
DATABASE_URL=sqlite:///./medai_copilot.db
# For PostgreSQL: postgresql://username:password@localhost/medai_copilot

# File Upload Configuration
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads
REPORTS_DIR=reports
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff,dicom,dcm

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE=medai_copilot.log

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=true

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=2.0.0

# Feature Flags
ENABLE_MULTI_LANGUAGE=true
ENABLE_REPORTS=true
ENABLE_OFFLINE_MODE=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@medai-copilot.com

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar
AUTO_DETECT_LANGUAGE=true

# Medical Compliance
HIPAA_COMPLIANCE_MODE=false
DATA_RETENTION_DAYS=365
AUDIT_LOGGING=true
ENCRYPTION_AT_REST=true

# Development Configuration
DEVELOPMENT_MODE=true
MOCK_AI_RESPONSES=false
ENABLE_DEBUG_TOOLBAR=true

# Performance Configuration
ASYNC_WORKERS=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=300
RESPONSE_COMPRESSION=true
